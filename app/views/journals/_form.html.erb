<%= form_with(model: journal) do |form| %>
  <% if journal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(journal.errors.count, "error") %> prohibited this journal from being saved:</h2>

      <ul>
        <% journal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Date", style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label "Enter your weight today", style: "display: block" %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label "Write about your day here", style: "display: block" %>
    <%= form.text_area :entry %>
  </div>

  <div>
    <%= form.label "Did you attend the gym today?", style: "display: block" %>
    <%= form.check_box :gym_attendance %>
  </div>

  <div>
    <%= form.label "Water", style: "display: block" %>
    <%= form.number_field :water %>
  </div>

  <div>
    <%= form.label "Calories", style: "display: block" %>
    <%= form.number_field :calories %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
